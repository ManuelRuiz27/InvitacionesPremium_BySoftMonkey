enum UserRole {
  DIRECTOR_GLOBAL
  PLANNER
  STAFF
}

enum EventStatus {
  DRAFT
  PUBLISHED
  CLOSED
  BLOCKED
}

enum RsvpStatus {
  PENDING
  CONFIRMED
