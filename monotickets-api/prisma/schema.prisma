  invitation Invitation? @relation(fields: [invitationId], references: [id])
  
  @@map("scans")
}

model DeliveryAttempt {
  id           String         @id @default(uuid())
  invitationId String
  method       DeliveryMethod
  status       DeliveryStatus @default(PENDING)
