model Scan {
  id                  String     @id @default(uuid())
  qrToken             String?
  invitationId        String?    // Add direct link to invitation
  eventId             String
  scannedBy           String
  status              ScanStatus
  enteredNames        String[]   @default([]) // Names that entered in this scan
